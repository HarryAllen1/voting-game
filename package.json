{
	"name": "voting-game",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "pnpm run dev:server & pnpm run dev:client",
		"build": "pnpm run build:server && pnpm run build:client",
		"dev:client": "vite dev",
		"dev:server": "tsup --watch --onSuccess \"node dist/index.js\"",
		"build:client": "vite build",
		"build:server": "tsup",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"devDependencies": {
		"@sveltejs/adapter-vercel": "^1.0.2",
		"@sveltejs/kit": "^1.1.0",
		"@types/express": "^4.17.15",
		"@types/qrcode": "^1.5.0",
		"@typescript-eslint/eslint-plugin": "^5.48.1",
		"@typescript-eslint/parser": "^5.48.1",
		"eslint": "^8.31.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"prettier": "^2.8.2",
		"prettier-plugin-svelte": "^2.9.0",
		"svelte": "^3.55.1",
		"svelte-check": "^3.0.2",
		"tslib": "^2.4.1",
		"tsup": "^6.5.0",
		"typescript": "^4.9.4",
		"unocss": "^0.48.4",
		"vite": "^4.0.4",
		"vite-imagetools": "^4.0.14",
		"vitest": "^0.27.1"
	},
	"type": "module",
	"dependencies": {
		"@unocss/reset": "^0.48.4",
		"@upstash/ratelimit": "^0.4.0",
		"@upstash/redis": "^1.19.1",
		"@vercel/analytics": "^0.1.8",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"firebase": "^9.15.0",
		"qrcode": "^1.5.1",
		"socket.io": "^4.5.4"
	},
	"pnpm": {
		"peerDependencyRules": {
			"ignoreMissing": [
				"react"
			]
		}
	}
}
